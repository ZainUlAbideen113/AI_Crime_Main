<%- include('../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <!-- Page Header -->
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="h3 mb-0">Pattern Details</h1>
          <p class="text-muted">Detailed view of crime pattern analysis</p>
        </div>
        <div>
          <a href="/analysis/patterns" class="btn btn-secondary me-2">
            <i class="fas fa-arrow-left me-2"></i>Back to Patterns
          </a>
          <button type="button" class="btn btn-primary" onclick="window.print()">
            <i class="fas fa-print me-2"></i>Print Report
          </button>
        </div>
      </div>
    </div>
  </div>

  <% if (pattern) { %>
    <!-- Pattern Overview -->
    <div class="row mb-4">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title mb-0">
              <%= pattern.name %>
              <span class="badge bg-<%= pattern.type === 'hotspot' ? 'danger' : pattern.type === 'temporal' ? 'warning' : 'info' %> ms-2">
                <%= pattern.type %>
              </span>
            </h5>
          </div>
          <div class="card-body">
            <p class="card-text"><%= pattern.description %></p>
            
            <div class="row">
              <div class="col-md-6">
                <h6>Confidence Level</h6>
                <div class="progress mb-3">
                  <div class="progress-bar bg-<%= pattern.confidence >= 0.8 ? 'success' : pattern.confidence >= 0.6 ? 'warning' : 'danger' %>" 
                       role="progressbar" 
                       style="width: <%= (pattern.confidence * 100) %>%">
                    <%= Math.round(pattern.confidence * 100) %>%
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <h6>Analysis Method</h6>
                <p class="text-muted"><%= pattern.analysisMethod || 'AI Pattern Recognition' %></p>
              </div>
            </div>

            <% if (pattern.timePattern) { %>
              <h6>Time Pattern</h6>
              <p><%= pattern.timePattern %></p>
            <% } %>

            <% if (pattern.geographicPattern) { %>
              <h6>Geographic Pattern</h6>
              <p><%= pattern.geographicPattern %></p>
            <% } %>
          </div>
        </div>
      </div>
      
      <div class="col-lg-4">
        <div class="card">
          <div class="card-header">
            <h6 class="card-title mb-0">Pattern Statistics</h6>
          </div>
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span>Related Cases:</span>
              <strong><%= pattern.relatedCases ? pattern.relatedCases.length : 0 %></strong>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-2">
              <span>Incidents:</span>
              <strong><%= pattern.relatedIncidents ? pattern.relatedIncidents.length : 0 %></strong>
            </div>
            <% if (pattern.dateRange) { %>
              <div class="d-flex justify-content-between align-items-center mb-2">
                <span>Date Range:</span>
                <small>
                  <%= new Date(pattern.dateRange.start).toLocaleDateString() %> - 
                  <%= new Date(pattern.dateRange.end).toLocaleDateString() %>
                </small>
              </div>
            <% } %>
            <div class="d-flex justify-content-between align-items-center">
              <span>Created:</span>
              <small><%= new Date(pattern.createdAt).toLocaleDateString() %></small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Locations -->
    <% if (pattern.locations && pattern.locations.length > 0) { %>
      <div class="row mb-4">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h6 class="card-title mb-0">Affected Locations</h6>
            </div>
            <div class="card-body">
              <div class="row">
                <% pattern.locations.forEach((location, index) => { %>
                  <div class="col-md-4 mb-2">
                    <div class="border rounded p-2">
                      <i class="fas fa-map-marker-alt text-danger me-2"></i>
                      <%= location %>
                    </div>
                  </div>
                <% }); %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Related Cases -->
    <% if (pattern.relatedCases && pattern.relatedCases.length > 0) { %>
      <div class="row mb-4">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h6 class="card-title mb-0">Related Cases</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Case Number</th>
                      <th>Title</th>
                      <th>Status</th>
                      <th>Priority</th>
                      <th>Date</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% pattern.relatedCases.forEach(caseItem => { %>
                      <tr>
                        <td><%= caseItem.caseNumber %></td>
                        <td><%= caseItem.title %></td>
                        <td>
                          <span class="badge bg-<%= caseItem.status === 'open' ? 'warning' : caseItem.status === 'closed' ? 'success' : 'secondary' %>">
                            <%= caseItem.status %>
                          </span>
                        </td>
                        <td>
                          <span class="badge bg-<%= caseItem.priority === 'high' ? 'danger' : caseItem.priority === 'medium' ? 'warning' : 'info' %>">
                            <%= caseItem.priority %>
                          </span>
                        </td>
                        <td><%= new Date(caseItem.createdAt).toLocaleDateString() %></td>
                        <td>
                          <a href="/cases/<%= caseItem._id %>" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i>
                          </a>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  <% } else { %>
    <div class="row">
      <div class="col-12">
        <div class="alert alert-warning">
          <h5>Pattern Not Found</h5>
          <p>The requested pattern could not be found.</p>
          <a href="/analysis/patterns" class="btn btn-primary">Back to Patterns</a>
        </div>
      </div>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>

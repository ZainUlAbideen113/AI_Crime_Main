<%- include('../partials/header') %>

<div class="container-fluid">
  <div class="row">
    <!-- Page Header -->
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h1 class="h3 mb-0">Case Details</h1>
          <p class="text-muted">Case Number: <%= caseData.caseNumber %></p>
        </div>
        <div class="btn-group" role="group">
          <a href="/cases" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Cases
          </a>
          <a href="/cases/<%= caseData._id %>/edit" class="btn btn-outline-primary">
            <i class="fas fa-edit me-2"></i>Edit Case
          </a>
          <button type="button" class="btn btn-outline-danger" 
                  onclick="deleteCase('<%= caseData._id %>', '<%= caseData.caseNumber %>')">
            <i class="fas fa-trash me-2"></i>Delete
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Case Information -->
    <div class="col-lg-8">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Case Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <h6 class="text-muted">Title</h6>
              <p class="fw-bold"><%= caseData.title %></p>
            </div>
            <div class="col-md-3">
              <h6 class="text-muted">Priority</h6>
              <% 
                let priorityClass = 'secondary';
                let priorityText = 'Medium';
                if (caseData.priority >= 9) {
                  priorityClass = 'dark';
                  priorityText = 'Critical';
                } else if (caseData.priority >= 7) {
                  priorityClass = 'danger';
                  priorityText = 'High';
                } else if (caseData.priority >= 4) {
                  priorityClass = 'warning';
                  priorityText = 'Medium';
                } else {
                  priorityClass = 'success';
                  priorityText = 'Low';
                }
              %>
              <span class="badge bg-<%= priorityClass %> fs-6">
                <%= priorityText %>
              </span>
            </div>
            <div class="col-md-3">
              <h6 class="text-muted">Status</h6>
              <% 
                let statusClass = 'secondary';
                if (caseData.status === 'open') statusClass = 'primary';
                else if (caseData.status === 'investigating') statusClass = 'info';
                else if (caseData.status === 'closed') statusClass = 'success';
                else if (caseData.status === 'cold') statusClass = 'dark';
              %>
              <span class="badge bg-<%= statusClass %> fs-6">
                <%= caseData.status.replace('_', ' ').charAt(0).toUpperCase() + caseData.status.replace('_', ' ').slice(1) %>
              </span>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-md-6">
              <h6 class="text-muted">Category</h6>
              <p>
                <% if (caseData.tags && caseData.tags.length > 0) { %>
                  <% caseData.tags.forEach((tag, index) => { %>
                    <span class="badge bg-secondary me-1"><%= tag.replace('_', ' ').charAt(0).toUpperCase() + tag.replace('_', ' ').slice(1) %></span>
                  <% }); %>
                <% } else { %>
                  <span class="text-muted">No category assigned</span>
                <% } %>
              </p>
            </div>
            <div class="col-md-6">
              <h6 class="text-muted">Location</h6>
              <p><i class="fas fa-map-marker-alt text-danger me-2"></i>
                <%= caseData.location.address || caseData.location || 'Location not specified' %>
              </p>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-md-6">
              <h6 class="text-muted">Severity</h6>
              <% 
                let severityClass = 'secondary';
                if (caseData.severity === 'critical') severityClass = 'dark';
                else if (caseData.severity === 'high') severityClass = 'danger';
                else if (caseData.severity === 'medium') severityClass = 'warning';
                else if (caseData.severity === 'low') severityClass = 'success';
              %>
              <span class="badge bg-<%= severityClass %>">
                <%= caseData.severity.charAt(0).toUpperCase() + caseData.severity.slice(1) %>
              </span>
            </div>
            <div class="col-md-6">
              <h6 class="text-muted">Assigned Officer</h6>
              <p>
                <% if (caseData.assignedOfficer) { %>
                  <i class="fas fa-user me-2"></i>
                  <%= caseData.assignedOfficer.username %>
                  <% if (caseData.assignedOfficer.badgeNumber) { %>
                    <small class="text-muted">(Badge: <%= caseData.assignedOfficer.badgeNumber %>)</small>
                  <% } %>
                <% } else { %>
                  <span class="text-muted">Not assigned</span>
                <% } %>
              </p>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col-12">
              <h6 class="text-muted">Description</h6>
              <p class="text-justify"><%= caseData.description %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Case Notes -->
      <% if (caseData.notes && caseData.notes.length > 0) { %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="card-title mb-0">Case Notes</h5>
          </div>
          <div class="card-body">
            <% caseData.notes.forEach(note => { %>
              <div class="border-bottom mb-3 pb-3">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <div>
                    <strong>
                      <% if (note.author && note.author.username) { %>
                        <%= note.author.username %>
                      <% } else { %>
                        System
                      <% } %>
                    </strong>
                    <% if (note.isPrivate) { %>
                      <span class="badge bg-warning ms-2">Private</span>
                    <% } %>
                  </div>
                  <small class="text-muted">
                    <%= new Date(note.createdAt).toLocaleString() %>
                  </small>
                </div>
                <p class="mb-0"><%= note.content %></p>
              </div>
            <% }); %>
          </div>
        </div>
      <% } %>

      <!-- Related Incidents -->
      <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0">Related Incidents</h5>
          <a href="/incidents/new?caseId=<%= caseData._id %>" class="btn btn-sm btn-outline-primary">
            <i class="fas fa-plus me-1"></i>Add Incident
          </a>
        </div>
        <div class="card-body">
          <% if (caseData.incidents && caseData.incidents.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>Incident #</th>
                    <th>Type</th>
                    <th>Date/Time</th>
                    <th>Severity</th>
                    <th>Location</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% caseData.incidents.forEach(function(incident) { %>
                    <tr>
                      <td>
                        <a href="/incidents/<%= incident._id %>" class="text-decoration-none">
                          <%= incident.incidentNumber %>
                        </a>
                      </td>
                      <td><%= incident.type %></td>
                      <td><%= new Date(incident.dateTime).toLocaleString() %></td>
                      <td>
                        <% 
                          let severityClass = 'secondary';
                          if (incident.severity === 'high') severityClass = 'danger';
                          else if (incident.severity === 'critical') severityClass = 'dark';
                          else if (incident.severity === 'medium') severityClass = 'warning';
                          else if (incident.severity === 'low') severityClass = 'success';
                        %>
                        <span class="badge bg-<%= severityClass %>">
                          <%= incident.severity %>
                        </span>
                      </td>
                      <td><%= incident.location %></td>
                      <td>
                        <a href="/incidents/<%= incident._id %>" class="btn btn-sm btn-outline-primary">
                          <i class="fas fa-eye"></i>
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center py-4">
              <i class="fas fa-clipboard-list fa-2x text-muted mb-3"></i>
              <p class="text-muted">No incidents linked to this case yet.</p>
              <a href="/incidents/new?caseId=<%= caseData._id %>" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Add First Incident
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <!-- Case Summary -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Case Summary</h5>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-6">
              <div class="border-end">
                <h4 class="text-primary mb-0"><%= caseData.incidents ? caseData.incidents.length : 0 %></h4>
                <small class="text-muted">Incidents</small>
              </div>
            </div>
            <div class="col-6">
              <h4 class="text-info mb-0">
                <%= Math.floor((new Date() - new Date(caseData.createdAt)) / (1000 * 60 * 60 * 24)) %>
              </h4>
              <small class="text-muted">Days Open</small>
            </div>
          </div>
        </div>
      </div>

      <!-- Assigned Officer -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Assigned Officer</h5>
        </div>
        <div class="card-body">
          <% if (caseData.assignedOfficer) { %>
            <div class="d-flex align-items-center">
              <div class="avatar-circle bg-primary text-white me-3">
                <%= caseData.assignedOfficer.username.charAt(0).toUpperCase() %>
              </div>
              <div>
                <h6 class="mb-0"><%= caseData.assignedOfficer.username %></h6>
                <small class="text-muted">Badge: <%= caseData.assignedOfficer.badgeNumber %></small><br>
                <small class="text-muted"><%= caseData.assignedOfficer.department %></small>
              </div>
            </div>
          <% } else { %>
            <p class="text-muted">No officer assigned</p>
          <% } %>
        </div>
      </div>

      <!-- Case Timeline -->
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title mb-0">Timeline</h5>
        </div>
        <div class="card-body">
          <div class="timeline">
            <div class="timeline-item">
              <div class="timeline-marker bg-primary"></div>
              <div class="timeline-content">
                <h6 class="mb-1">Case Created</h6>
                <small class="text-muted">
                  <%= new Date(caseData.createdAt).toLocaleDateString() %> at 
                  <%= new Date(caseData.createdAt).toLocaleTimeString() %>
                </small>
              </div>
            </div>
            
            <% if (caseData.updatedAt && caseData.updatedAt.getTime() !== caseData.createdAt.getTime()) { %>
              <div class="timeline-item">
                <div class="timeline-marker bg-info"></div>
                <div class="timeline-content">
                  <h6 class="mb-1">Last Updated</h6>
                  <small class="text-muted">
                    <%= new Date(caseData.updatedAt).toLocaleDateString() %> at 
                    <%= new Date(caseData.updatedAt).toLocaleTimeString() %>
                  </small>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <a href="/incidents/new?caseId=<%= caseData._id %>" class="btn btn-outline-primary">
              <i class="fas fa-plus me-2"></i>Add Incident
            </a>
            <a href="/analysis?caseId=<%= caseData._id %>" class="btn btn-outline-info">
              <i class="fas fa-chart-line me-2"></i>Run Analysis
            </a>
            <button class="btn btn-outline-warning" onclick="updateStatus()">
              <i class="fas fa-edit me-2"></i>Update Status
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete case <strong><%= caseData.caseNumber %></strong>?</p>
        <p class="text-danger"><small>This action cannot be undone and will also delete all associated incidents.</small></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDelete">Delete Case</button>
      </div>
    </div>
  </div>
</div>

<style>
.avatar-circle {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.timeline {
  position: relative;
  padding-left: 30px;
}

.timeline-item {
  position: relative;
  margin-bottom: 20px;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-marker {
  position: absolute;
  left: -35px;
  top: 5px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.timeline::before {
  content: '';
  position: absolute;
  left: -30px;
  top: 10px;
  bottom: 10px;
  width: 2px;
  background-color: #dee2e6;
}
</style>

<script>
function deleteCase(caseId, caseNumber) {
  new bootstrap.Modal(document.getElementById('deleteModal')).show();
}

document.getElementById('confirmDelete').addEventListener('click', async function() {
  try {
    const response = await fetch(`/cases/<%= caseData._id %>`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json'
      }
    });
    
    const result = await response.json();
    
    if (result.success) {
      window.location.href = '/cases';
    } else {
      alert('Error deleting case: ' + result.error);
    }
  } catch (error) {
    alert('Error deleting case: ' + error.message);
  }
  
  bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
});

function updateStatus() {
  // This could open a modal or redirect to edit page
  window.location.href = '/cases/<%= caseData._id %>/edit';
}
</script>

<%- include('../partials/footer') %>


